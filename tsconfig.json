{
    "include": ["src", "src/**/*.json"],
    "exclude": [
        "**/*.stories.ts",
        "**/*.stories-ignore.ts",
        "**/test/*",
        "**/examples/*"
    ],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "strictNullChecks": true,
        "outDir": "dist"
    }
}
