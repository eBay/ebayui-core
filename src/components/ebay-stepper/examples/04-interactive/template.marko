class {
    onCreate(input) {
        this.state = {
            current: 0
        };
        this.items = ['Step 1', 'Step 2', 'Step 3', 'Step 4', 'Step 5']
    }
    prev() {
        if (this.state.current >= 0) {
            this.state.current--;
        }
    }
    next() {
        if (this.state.current < this.items.length - 1) {
            this.state.current++;
        }
    }
}

<div>
    <ebay-button on-button-click('prev')>Previous</ebay-button>
    <ebay-button on-button-click('next')>Next</ebay-button>

    <ebay-stepper>
        <for|item, index| of=component.items>
            <@step current=state.current === index>${item}</@step>
        </for>
    </ebay-stepper>
</div>
