        font-size: 36px;
        font-weight: bold;
        height: 330px;
        line-height: 330px;
        text-align: center;
    }
</style>

<ebay-carousel
    ...input
    index=state.index
    itemsPerSlide=(input.itemsPerSlide || 2)
    on-next("emit", "next")
    on-previous("emit", "previous")
    on-move("onMove")>
    <@item style={ width: "400px" } class="demo2-card">Card 1</@item>
    <@item style={ width: "400px" } class="demo2-card">Card 2</@item>
