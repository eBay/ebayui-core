<var options=[
    { value: 1, text: 'Option 1' },
    { value: 2, text: 'Option 2', selected: true },
    { value: 3, text: 'Option 3' }
]/>

<span style="display: inline-block; max-width: 200px;">
    <ebay-combobox name="formFieldName">
        <if(true)>
            <ebay-combobox-option for(option in options) value=option.value text=option.text selected=option.selected/>
        </if>
    </ebay-combobox>
</span>
