<script marko-init>
    var processHtmlAttributes = require("../../common/html-attributes");
    var ignoredAttributes = ["class", "style", "disabled"];
</script>

<span
    w-bind
    class=["radio", data.class]
    style=data.style>
    <input
        w-on-click="handleClick"
        w-onfocus="handleFocus"
        type="radio"
        class="radio__control"
        id=(data.id || widget.id + "-input")
        disabled=data.disabled
        ${processHtmlAttributes(data, ignoredAttributes)}/>
    <span class="radio__icon" hidden>
        <ebay-icon type="inline" name="radio-unchecked" class="radio__unchecked" focusable="false" no-skin-classes/>
        <ebay-icon type="inline" name="radio-checked" class="radio__checked" focusable="false" no-skin-classes/>
    </span>
</span>
