import processHtmlAttributes from "../../common/html-attributes"

static var ignoredAttributes = ["src", "cdnUrl", "cdnVersion", "format", "player"];

<div
    key="container"
    class="ebay-video-container"
    style={
        width: `${input.width}px`,
        height: `${input.height}px`
    }>
    <if(!input.width)>
        <subscribe to=window on-resize("handleResize")/>
    </if>
    $ var isIosFormat = component.checkFormat();
    <video
        key="video"
        width=state.width
        controls
        ...processHtmlAttributes(input, ignoredAttributes)>
        <if(isIosFormat)>
            <source src=input.src/>
        </if>
    </video>
    <div
        class=[
            "ebay-video-container__overlay",
            !state.failed && "ebay-video-container__overlay--hidden"
        ]
        on-click("loadCDN")>
        <if(input.retry)>
            <${input.retry}/>
        </if>
        <else>
            Click to retry
            <ebay-refresh-icon/>
        </else>
    </div>
    <div class=[
        "ebay-video-container__overlay",
        state.isLoaded && "ebay-video-container__overlay--hidden"
    ]>
        <if(input.loading)>
            <${input.loading.renderBody}/>
        </if>
        <else>
            <ebay-progress-spinner/>
        </else>
    </div>
</div>
