import { processHtmlAttributes } from '../../../common/html-attributes';
import LightBulbIcon from '<ebay-lightbulb-24-icon>';

$ const {
    status,
    a11yText,
    a11yIconText,
    icon,
    iconClass,
    class: inputClass,
    root,
    headerRoot,
    a11yRoleDescription,
    prefixClass,
    title,
    footer,
    type,
    mainRoot,
    noA11yLabel,
    a11yDismissText,
    educationIcon,
    prominent, // deprecated, remove next major
    cta,
    ...htmlInput
} = input;

$ const isEducation = prefixClass === 'education-notice';
<${root || 'section'}
    aria-labelledby=!noA11yLabel && component.elId('status')
    aria-roledescription=a11yRoleDescription
    class=[prefixClass, inputClass, status === 'education' && prominent && `${prefixClass}--education`]
    ...processHtmlAttributes(htmlInput)
>
    <if(icon !== 'none')>
        <${headerRoot || 'div'} class=`${prefixClass}__header` id:scoped='status'>
            <if(status === 'confirmation' || status === 'celebration')>
                <ebay-confirmation-filled-16-icon
                    a11y-text=a11yIconText || a11yText
                    a11y-variant='label'
                    class=iconClass
                />
            </if>
            <else-if(status === 'attention')>
                <ebay-attention-filled-16-icon
                    a11y-variant='label'
                    a11y-text=a11yIconText || a11yText
                    class=iconClass
                />
            </else-if>
            <else-if(status === 'information')>
                <ebay-information-filled-16-icon
                    a11y-variant='label'
                    a11y-text=a11yIconText || a11yText
                    class=iconClass
                />
            </else-if>
            // deprecated status === education. We should probably remove this whole icon on the next major version
            <else-if(isEducation || (status === 'education' && type === 'section'))>
                <${educationIcon || LightBulbIcon}
                    a11y-variant='label'
                    a11y-text=a11yIconText || a11yText
                    class=iconClass/>
            </else-if>
            <if(isEducation && title)>
                <${title.as || 'h2'}
                    ...title
                    class=[`${prefixClass}__title`, title.class]
                >
                    <${title}/>
                </>
                <if(a11yDismissText)>
                        <ebay-icon-button
                            aria-label=`${a11yDismissText}`
                            size="small"
                            class=['fake-link', `${prefixClass}__dismiss`]
                            onClick('emit', 'dismiss')
                        >
                            <ebay-close-16-icon/>
                        </ebay-icon-button>
                </if>
            </if>
        </>
    </if>
    <${mainRoot || 'div'} class=`${prefixClass}__main`>
        <if(!isEducation && title)>
            <${title.as || 'h2'}
                ...title
                class=[`${prefixClass}__title`, title.class]
            >
                <${title}/>
            </>
        </if>
        <${input.renderBody}/>
    </>
    <if(cta)>
        <p class=`${prefixClass}__cta`><a ...cta><${cta}/></a></p>
    </if>

    <if(footer && (isEducation || !a11yDismissText))>
        <div class=`${prefixClass}__footer`><${footer}/></div>
    </if>
    <if(!isEducation && !footer && a11yDismissText)>
        <div class=`${prefixClass}__footer`>
            <button
                aria-label=`${a11yDismissText}`
                class=['fake-link', `${prefixClass}__dismiss`]
                onClick('emit', 'dismiss')
                onKeydown('emit', 'dismiss')
            >
                <ebay-close-16-icon.icon.icon--close-16/>
            </button>
        </div>
    </if>
</>
