import { processHtmlAttributes } from "../../common/html-attributes"

static function toJSON(this: any) {
    return {
        disabled: this.disabled
    };
}

static var ignoredAttributes = ["toJSON", "variant"];

$ {
    input.toJSON = toJSON;
    var htmlAttributes = processHtmlAttributes(input, ignoredAttributes);
}
<button
    ...htmlAttributes
    onClick("handleClick")
    onKeydown("handleKeydown")
    onFocus("handleFocus")
    onBlur("handleBlur")
    class=[input.class, "fake-link", input.variant === 'standalone' && 'standalone-link']
    data-ebayui=true
    type=(input.type || "button")>
    <${input.renderBody}/>
</button>
