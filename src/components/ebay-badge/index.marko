<script marko-init>
    var processHtmlAttributes = require("../../common/html-attributes");
</script>

<var number=Math.round(data.number)/>
<var ariaRole=(data.type !== 'menu' && data.type !== 'icon' && "img")/>

<if(number > 0)>
    <span
        role=ariaRole
        class=["badge", data.class]
        style=data.style
        ${processHtmlAttributes(data)}>
        ${number > 99 ? "99+" : number}
    </span>
</if>
