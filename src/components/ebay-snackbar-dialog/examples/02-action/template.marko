<ebay-button on-click("handleOpen")>
    Open Action Snackbar
</ebay-button>
<ebay-snackbar-dialog open=state.open on-close('handleClose') on-action("handleClose")>
    This is the action snackbar
    <@action access-key="U">
        Undo
    </@action>
</ebay-snackbar-dialog>

class {
    onCreate() {
        this.state = {open: false};
    }

    handleOpen() {
        this.state.open = true;
    }

    handleClose() {
        this.state.open = false;
    }
}
