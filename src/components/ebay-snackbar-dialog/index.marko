import processHtmlAttributes from "../../common/html-attributes"

<ebay-dialog-base
    ...input
    isModal=false
    classPrefix="snackbar-dialog"
    class=[input.class, "snackbar-dialog--transition"]
    windowClass=[input.layout === "column" && "snackbar-dialog__window--column"]
    buttonPosition="hidden">
    <${input.renderBody}/>
    <if(input.action)>
        <@action>
            <ebay-button variant="fake-link" on-click('emit', 'action') >
                ${input.action.actionText}
                <span class="clipped"> - Access Key: ${input.action.actionAccessKey}</span>
            </ebay-button>
        </@action>
    </if>
</ebay-dialog-base>
