<span
    style="display: inline-block; max-width: 200px;"
    class=data.class
    ${data.htmlAttributes}
    w-bind>
    <select
        name=data.name
        disabled=data.disabled
        w-onchange="optionChanged">
        <option
            for(option in data.options)
            value=option.value
            selected=option.selected
            class=option.class
            ${option.htmlAttributes}>
            ${option.label}
        </option>
    </select>
</span>
